  <style>
    /* For desktop */
    @media only screen and (min-width:360px) {
      #signup {
          max-width: 530px;
          padding: 15px;
          margin: 0 auto;
          border-radius: 0.3em;
          background-color: #f2f2f2;
      }
      #signup h2 { 
        font-family: sans-serif;
        font-size: 25px;
        font-weight: 400;
        color: #000000;
        margin-top: 5%;
        text-align: center;
        text-transform: uppercase;
      }
      .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
      }

      img.avatar {
        width: 15%;
        border-radius: 20%;
      }
    }

    /* For mobile devices */
    @media only screen and (max-width:360px) {
      #signup {
        max-width: 350px;
        padding: 15px;
        margin: 0 auto;
        border-radius: 0.3em;
        background-color: #f2f2f2;
        font-family: 'Open Sans' , sans-serif;
        font-size: 12px;      
      }

